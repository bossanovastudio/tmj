root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

[*.{rb,yml,travis.yml,coffee}]
indent_style = space
indent_size = 2

[{*.js,*.html,*.css,*.scss}]
indent_style = space
indent_size = 4

[{Gemfile,Rakefile,package.json}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
