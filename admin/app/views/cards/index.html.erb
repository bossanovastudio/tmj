<p id="notice"><%= notice %></p>

<div id="cards-container" class="cards">
  <% @cards.each do |card| %>
    <div class="card six two-five column show">
        <div style="background-image:url('{{card.media}}')" class="img">
            <img class="userPhoto" src="/img/user.jpg" />
        </div>
        <div class="content">
            <p class="name">Robson Coelho</p>
            <p class="date"><img src="/img/facebook.png" /> <%= card.posted_at %></p>
            <p class="text"><%= card.content %></p>
            <p class="share">
                <a ng-href="#">
                    <img class="heart" src="/img/like.png">
                </a>
                <a ng-href="#">
                    <img class="arrow" src="/img/share.png">
                </a>
            </p>
        </div>
    </div>
  <% end %>
</div>

