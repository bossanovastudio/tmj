<section id="highlights">
  <div class="top-bar">
    <h1 class="title">Destaques</h1>
    <div class="action-bar">
      <%= link_to new_admin_highlight_path do %>
        <svg class="add-icon" viewBox="0 0 33 33" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
          <g id="border" stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
              <g transform="translate(-372.000000, -154.000000)" stroke="#68A6EF" stroke-width="1.5">
                  <g transform="translate(373.000000, 155.000000)">
                      <ellipse id="bg" cx="15.5" cy="15.5" rx="15.5" ry="15.5"></ellipse>
                      <path d="M6.61923478,15.5313913 L24.443713,15.5313913" class="stroke" stroke-linecap="round" stroke-linejoin="round"></path>
                      <path d="M15.531887,24.4432174 L15.531887,6.61956522" class="stroke" stroke-linecap="round" stroke-linejoin="round"></path>
                  </g>
              </g>
          </g>
        </svg>
      <% end %>
    </div>
  </div>
  <div class="content">
  <% @highlights.each do |h| %>
    <img src="<%= h.desktop_image.file_url %>" />
    <%= link_to "Edit", edit_admin_highlight_path(h) %>
    <br>
  <% end %>
  </div>
</section>
