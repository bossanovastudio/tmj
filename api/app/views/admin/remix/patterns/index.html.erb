<section id="patterns" class="remix-sub">
  <div class="top-bar">
    <h1 class="title">Patterns</h1>
  </div>
      <div class="content">
        <%= link_to "Novo Pattern",  new_admin_remix_pattern_path, class: 'button' %>
        <ul>
            <% @patterns.each do |pattern| %>
            <li><img src="<%= pattern.image.url %>" alt="">
            <%= link_to "Apagar", admin_remix_pattern_path(pattern), method: :delete, class: 'button', remote: true %>
            </li>
            <% end %>
        </ul>
      </div>
    </div>
</section>
