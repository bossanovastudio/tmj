
<section id="cards" style="margin-top: 100px;">
    <div class="content">
        <%= link_to "New",  new_admin_remix_text_color_path %>
        <ul>
            <% @text_colors.each do |color| %>
            <li>Background: <%= color.background %>, Foreground: <%= color.foreground %> (
                <%= link_to "Edit",  edit_admin_remix_text_color_path(color) %> |
