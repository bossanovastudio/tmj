<!DOCTYPE html>
<html>
  <head>
    <!-- Twitter Card data -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content="<%= @card.content %>">
    <meta name="twitter:description" content="<%= @card.content %>">

    <!-- Open Graph data -->
    <meta property="og:title" content="<%= @card.content %>" />
    <% if @card.media %>
    <meta property="og:image" content="<%= @card.media.url %>" />
    <% end %>
    <% if @card.is_from_remix? %>
    <meta property="og:image" content="<%= @card.remix_image.image_url %>" />
    <% end %>
    <meta property="og:description" content="<%= @card.content %>" />
  </head>
  <body>
    <p><%= @card.content %></p>
    <% if @card.media %>
    <img src="<%= @card.media.url %>">
    <% end %>
    <% if @card.is_from_remix? %>
    <img src="<%= @card.remix_image.image_url %>">
    <% end %>
  </body>
</html>
