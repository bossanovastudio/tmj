<div class="vertical-container" ng-swipe-up="swipeUp()">
  <div class="vertical-content">
    <div ng-class="{show : isCardsLoaded}" class="container cards ramona-card animated">
      <div class="author">
        <div class="box-avatar-user">
          <img class="badge" src="<%=asset_url('site/ramona-badge.svg')%>" />
          <div class="avatar" style="background-image: url('{{currentUser.image}}')" />
          <img class="avatar_hover" width="200" height="200" src="<%=asset_url('site/ramona_hover.png')%>" />
        </div>
        <div class="seven columns">
          <a ng-if="loggedUser.username == currentUser.username" ng-href="/editar-perfil" target="_self">
            <img class="edit" src="<%=asset_url('site/edit-icon-black.svg')%>" width="auto" height="20px" />
          </a>
          <div class="profile">
            <div class="box-profile">
              <p class="editor">{{currentUser.username}}</p>
              <p class="position">Editor TMJ</p>
            </div>
            <a ng-click="!following ? followUser() : unFollowUser()" class="follow">
              <div class="text" ng-if="!following">SEGUIR</div>
              <div class="text" ng-if="following">SEGUINDO</div>
            </a>
            <div class="followers">
              <p class="number recommendcounter">{{currentUser.followers}} seguidores</p>
            </div>
          </div>
          <div class="about">
            <div class="twelve columns">
              <p class="summary">{{currentUser.bio}}</p>
            </div>
          </div>
          <div class="social">
            <ul class="social-editor">
