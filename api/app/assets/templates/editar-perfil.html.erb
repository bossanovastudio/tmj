<div class="overlay-pass" ng-click="togglePassword()"></div>
<div class="container">
    <div class="four columns left">
        <div ng-click="selectFile()" class="box-avatar">
          <div class="avatar" style="background-image: url('<%= asset_url('site/profile_default.svg') %>')" />
          <div class="avatar_hover"></div>
        </div>
        <input type="file" id="photo" style="display: none" file-on-change="changedFile" accept="image/*">
    </div>
    <div class="four columns offset">
        <form name="profileForm">
            <div>
              <span class="bioheader">Perfil</span>
            </div>
            <div class="form-group bio">
                <label for="username">bio</label>
                <br>
                <textarea name="bio" class="form-control" cols="1" maxlength="250" ng-model="form.bio" rows="2"></textarea>
            </div>
            <ul class="form-group checksocial">
                <!-- <li>
                    <div class="switch">
                      <img src="<%= asset_url('site/pinterest-profile.svg') %>" alt="" class="img-social">
                      <input id="cmn-toggle-pin" class="cmn-toggle cmn-toggle-round" value="1" name="pinterest" type="checkbox">
                      <label for="cmn-toggle-pin"></label>
                    </div>
                </li> -->
                <label for="username" class="label-social">redes sociais</label>

                <li>
                    <div class="switch" ng-click="authSocial('facebook')">
                      <img src="<%= asset_url('site/facebook-profile.svg') %>" alt="" class="img-social">
                      <input ng-if="user.providers.facebook" id="cmn-toggle-fb" class="cmn-toggle cmn-toggle-round" value="1" checked="checked" name="facebook" type="checkbox">
                      <input ng-if="!user.providers.facebook" id="cmn-toggle-fb" class="cmn-toggle cmn-toggle-round" value="1" name="facebook" type="checkbox">
                      <label for="cmn-toggle-fb"></label>
                    </div>
                </li>
                <li>
                    <div class="switch" ng-click="authSocial('instagram')">
                      <img src="<%= asset_url('site/instagram-profile.svg') %>" alt="" class="img-social">
                      <input ng-if="user.providers.instagram" id="cmn-toggle-insta" class="cmn-toggle cmn-toggle-round" value="1" checked="checked" name="instagram" type="checkbox">
                      <input ng-if="!user.providers.instagram" id="cmn-toggle-insta" class="cmn-toggle cmn-toggle-round" value="1" name="instagram" type="checkbox">
                      <label for="cmn-toggle-insta"></label>
                    </div>
                </li>
                <!-- <li>
                    <div class="switch">
                      <img src="<%= asset_url('site/vimeo-profile.svg') %>" alt="" class="img-social">
                      <input id="cmn-toggle-vimeo" class="cmn-toggle cmn-toggle-round" value="1" name="vimeo" type="checkbox">
                      <label for="cmn-toggle-vimeo"></label>
                    </div>
                </li>
                <li>
                    <div class="switch">
                      <img src="<%= asset_url('site/tumblr-profile.svg') %>" alt="" class="img-social">
                      <input id="cmn-toggle-tumblr" class="cmn-toggle cmn-toggle-round" value="1" name="tumblr" type="checkbox">
                      <label for="cmn-toggle-tumblr"></label>
                    </div>
                </li> -->
                <li>
                    <div class="switch" ng-click="authSocial('twitter')">
                      <img src="<%= asset_url('site/twitter-profile.svg') %>" alt="" class="img-social">
                      <input ng-if="user.providers.twitter" id="cmn-toggle-twitter" class="cmn-toggle cmn-toggle-round" value="1" checked="checked" name="twitter" type="checkbox">
                      <input ng-if="!user.providers.twitter" id="cmn-toggle-twitter" class="cmn-toggle cmn-toggle-round" value="1" name="twitter" type="checkbox">
                      <label for="cmn-toggle-twitter"></label>
                    </div>
                </li>
                <!-- <li>
                    <div class="switch">
                      <img src="<%= asset_url('site/google-profile.svg') %>" alt="" class="img-social">
                      <input id="cmn-toggle-google" class="cmn-toggle cmn-toggle-round" value="1" name="google" type="checkbox">
                      <label for="cmn-toggle-google"></label>
                    </div>
                </li>
                <li>
                    <div class="switch">
                      <img src="<%= asset_url('site/youtube-profile.svg') %>" alt="" class="img-social">
                      <input id="cmn-toggle-youtube" class="cmn-toggle cmn-toggle-round" value="1" name="youtube" type="checkbox">
                      <label for="cmn-toggle-youtube"></label>
                    </div>
                </li> -->
                <li class="break"></li>
            </ul>
            <div>
              <span class="bioheader personal" ng-click="slideInfo($event, '.user, .mail, .pass')">Dados Pessoais</span>
            </div>
            <div class="form-group user hide">
                <label for="username">Nome de usuário</label>
                <br>
                <input type="text" ng-model="form.username" name="username" class="form-control" placeholder="insira seu apelido"/>
            </div>
            <div class="form-group mail hide">
                <label for="username">E-mail do Responsável</label>
                <br>
                <input type="text" name="email" ng-model="form.email" class="form-control" placeholder="insira o e-mail"/>
            </div>
            <div class="form-group pass hide">
                <label for="password">Nova Senha</label>
                <br>
                <ul class="input-pass register">
                    <li ng-click="togglePassword('first')" style="background:url('{{passwordChoice[0].img}}'); background-size: cover;">
                        <input type="hidden" name="pass-1" value="{{passwordChoice[0].value}}"/>
                    </li>
                    <li ng-click="togglePassword()" style="background:url('{{passwordChoice[1].img}}'); background-size: cover;">
                        <input type="hidden" name="pass-2" value="{{passwordChoice[1].value}}"/>
                    </li>
                    <li ng-click="togglePassword()" style="background:url('{{passwordChoice[2].img}}'); background-size: cover;">
                        <input type="hidden" name="pass-3" value="{{passwordChoice[2].value}}"/>
                    </li>
                    <li ng-click="togglePassword()" style="background:url('{{passwordChoice[3].img}}'); background-size: cover;">
                        <input type="hidden" name="pass-3" value="{{passwordChoice[3].value}}"/>
                    </li>
                </ul>
                <div class="pass-box register hide" ng-class="{show: open, hide: !open}">
                    <ul>
                        <li ng-repeat="pass in passwords" ng-click="addToPasswordChoice(pass)">
                            <img src="{{pass.img}}" alt="{{pass.name}}">
                        </li>
                    </ul>
                    <div class="after"></div>
                </div>
            </div>
            <div class="msg_group">
                <p class="error-msg" ng-if="msg_update">{{msg_update}}</p>
                <p class="sucess-msg" ng-if="msg_sus_update">{{msg_sus_update}}</p>
            </div>
            <div class="form-actions">
                <button type="button" ng-click="save()" class="btn btn-submit">Salvar</button>
                <button type="button" ng-click="back()" class="btn btn-cancel">Cancelar edição</button>
            </div>
            <p class="link-delete">Não quer mais fazer parte? <a href="#" ng-click="deleteAccount()"> Deletar conta</a></p>

        </form>
    </div>
    <div class="four columns right">
    </div>
</div>
