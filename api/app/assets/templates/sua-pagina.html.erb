<div class="vertical-container" ng-swipe-up="swipeUp()">
  <div class="vertical-content">
    <div ng-class="{show : isCardsLoaded}" class="container cards users animated">
      <div class="author">
        <div class="box-avatar-user">
          <div class="avatar profile" style="background-image: url('{{currentUser.image}}')"></div>
        </div>
        <div class="seven columns">
          <a ng-if="loggedUser.username == currentUser.username" ng-href="/editar-perfil" target="_self">
            <svg class="editicon" width="20px" height="20px" viewBox="0 0 23 23" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
                <g id="Menu,-cadastro-e-perfil" stroke="none" stroke-width="1" fill="none" fill-rule="evenodd" stroke-linecap="round" stroke-linejoin="round">
                    <g id="Perfil-usuário" transform="translate(-369.000000, -185.000000)" stroke="#000000" stroke-width="1.5">
                        <g id="edit-copy" transform="translate(370.000000, 186.000000)">
                            <polyline id="Stroke-4" points="0.798254545 13.5587118 0.000254545453 20.3824765 6.9118 19.5085059"></polyline>
                            <path d="M19.2311636,7.53856765 C19.9871636,6.78133235 20.4529818,5.74924412 20.4529818,4.61153824 C20.4529818,2.28856765 18.5127091,0.405361765 16.1193455,0.405361765 C14.9567091,0.405361765 13.9009818,0.84945 13.1227091,1.57271471" id="Stroke-6"></path>
                            <path d="M3.98688182,16.6620176 L16.3444273,4.66792941" id="Stroke-3"></path>
                            <polygon id="Stroke-1" points="0.798254545 13.5587118 13.1519818 1.56832941 19.2731636 7.51009412 6.9118 19.5085059"></polygon>
                        </g>
                    </g>
                </g>
            </svg>
          </a>
          <div class="profile">
            <div class="box-profile">
              <p class="editor">{{currentUser.username}}</p>
            </div>
          </div>
          <div class="about">
            <div class="twelve columns">
              <p class="summary">
                {{currentUser.bio}}
              </p>
            </div>
          </div>
          <div class="social">
            <ul class="social-editor">
              <!-- <li class="social-pi"><a href="https://br.pinterest.com/ramonatmj/" target="_blank"><img src="<%=asset_url('site/pinterest-profile.svg')%>" alt="" /></a></li> -->
              <li ng-if="currentUser.username == loggedUser.username || currentUser.providers.facebook" class="social-fb {{currentUser.providers.facebook ? 'active' : ''}}"><a href="{{currentUser.providers.facebook ? 'http://facebook.com/'+ currentUser.providers.facebook : '/editar-perfil'}}" target="{{currentUser.providers.facebook ? '_blank' :''}}"><img src="<%=asset_url('site/facebook-profile.svg')%>" alt="" /></a></li>
              <li ng-if="currentUser.username == loggedUser.username || currentUser.providers.instagram" class="social-in {{currentUser.providers.instagram ? 'active' : ''}}"><a href="{{currentUser.providers.instagram ? 'http://instagram.com/'+ currentUser.providers.instagram : '/editar-perfil'}}" target="{{currentUser.providers.instagram ? '_blank' :''}}"><img src="<%=asset_url('site/instagram-profile.svg')%>" alt="" /></a></li>
              <!-- <li class="social-tu"><a href="https://lunetalunatica.tumblr.com/" target="_blank"><img src="<%=asset_url('site/tumblr-profile.svg')%>" alt="" /></a></li> -->
              <!-- <li class="social-vi svg"><a href="#" target="_blank"><img src="/img/vimeo-profile.svg" alt="" /></a></li> -->
              <li ng-if="currentUser.username == loggedUser.username || currentUser.providers.twitter" class="social-tw {{currentUser.providers.twitter ? 'active' : ''}}"><a href="{{currentUser.providers.twitter ? 'http://twitter.com/'+ currentUser.providers.twitter : '/editar-perfil'}}" target="{{currentUser.providers.twitter ? '_blank' :''}}"><img src="<%=asset_url('site/twitter-profile.svg')%>" alt="" /></a></li>
              <!-- <li class="social-go"><a href="#" target="_blank"><img src="/img/google-profile.svg" alt="" /></a></li> -->
              <!-- <li class="social-yt"><a href="https://www.youtube.com/channel/UC2sp_4csOUc4VnmNdWxTXhQ" target="_blank"><img src="<%=asset_url('site/youtube-profile.svg')%>" alt="" /></a></li> -->
              <!-- <li class="social-twitch"><a href="#" target="_blank"><img src="/img/twitch-profile.svg" alt="" /></a></li> -->
            </ul>
          </div>
          <div class="recommendation">
            <div class="label">Recomendações</div>
            <ul>
              <li class="ramona">
                <img src="<%=asset_url('site/icone-ramona.svg')%>" alt="">
                <p class="number">{{currentUser.ramona_recommendations ? currentUser.ramona_recommendations : 0}}</p>
              </li>
              <li class="geek">
                <!-- <img src="<%=asset_url('site/icone-geek.svg')%>" alt="">
                <p class="number">{{currentUser.geek_recommendations ? currentUser.geek_recommendations : 0}}</p> -->
              </li>
              <li class="denise">
                <!-- <img src="<%=asset_url('site/icone-denise.svg')%>" alt="">
                <p class="number">{{currentUser.denise_recommendations ? currentUser.denise_recommendations : 0}}</p> -->
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="clearfix"></div>
<div class="content-no-cards" ng-if="currentUser.username == loggedUser.username">
  <img src="{{imgNoCards}}" alt="">
</div>
<div class="content-no-cards" ng-if="currentUser.username != loggedUser.username">
  <img src="{{imgNoCardsCurrent}}" alt="">
</div>

<div ng-include src="'<%= asset_url('cards.html')%>'"></div>
