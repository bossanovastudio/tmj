#!/usr/bin/env ruby

require "bundler/setup"
require "optparse"
require "crawler_socialnetwork"

opts = OptionParser.new do |opts|
  opts.banner = "Social Network Crawler"
  opts.define_head "Usage: crawler [options]"
  opts.separator ""
  opts.separator "Examples:"
  opts.separator "  bundle exec crawler"
  opts.separator ""
  opts.separator "Options:"

  opts.on_tail("-?", "--help", "Show this message") do
    puts opts
    exit
  end

  opts.on_tail("-v", "--version", "Show version") do
    puts CrawlerSocialnetwork::Version.to_markdown
    exit
  end
end
opts.parse!

@cli = CrawlerSocialnetwork::CLI.new
@cli.run
